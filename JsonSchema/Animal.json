{
 "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Animal",
  "description": "Este documento registra los datos de un Animal",
  "type": "object",
  "properties": {
    "Id_Animal": {
      "description": "Identificador requerido para cada Animal",
      "type": "string",
      "minLength": 2
    },
    "Nombre": {
      "type": "string"
    },
    "Especie": {
      "type": "object"
    },
    "Edad": {
      "type": "number",
      "maximum": 50
    },
    "Pais_Origen": {
      "type": "string"
    }
  },
  "required": [
    "Id_Animal",
    "Nombre"
  ]
}

                